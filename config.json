{
    "scan_settings": {
        "default_ports": [
            21,
            22,
            23,
            80,
            443,
            554,
            3389,
            8080,
            8554
        ],
        "scan_timeout": 0.1,
        "max_threads": 20,
        "arp_timeout": 1,
        "retry_count": 2,
        "batch_size": 50
    },
    "ui_settings": {
        "theme": "dark",
        "auto_scan_on_startup": false,
        "show_notifications": true,
        "window_width": 1200,
        "window_height": 800,
        "refresh_interval": 1000
    },
    "attack_settings": {
        "spoof_interval": 2,
        "restore_count": 7,
        "enable_dns_spoofing": false,
        "enable_packet_injection": false
    },
    "logging": {
        "level": "INFO",
        "max_file_size_mb": 10,
        "backup_count": 5,
        "log_directory": "logs"
    },
    "network_intel": {
        "enable_os_detection": true,
        "enable_service_detection": true,
        "banner_grab_timeout": 2,
        "enable_vulnerability_hints": true
    },
    "export": {
        "default_format": "json",
        "include_timestamps": true,
        "auto_export_on_scan": false
    }
}